<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zdrowy.Zdjecia">

    <Grid BackgroundColor="{AppThemeBinding Light=White, Dark=#1A2129}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <Image x:Name="imgCam"
               Grid.Row="0" 
               Grid.Column="0"
               Margin="2"/>

        <Button x:Name="btnCam" 
                Text="Zrób zdjęcie" 
                Grid.Row="1" 
                Grid.Column="0" 
                Margin="2" 
                Clicked="BtnCam_Clicked"
                BackgroundColor="{AppThemeBinding Light=#4191d8, Dark=#704241}" 
                TextColor="#FFF"/>


        <Button x:Name="btnPickPhoto" 
                Text="Wybierz zdjęcie"
                Grid.Row="2" 
                Grid.Column="0"    
                Margin="2"
                Clicked="BtnPickPhoto_Clicked"
                BackgroundColor="{AppThemeBinding Light=#4191d8, Dark=#704241}" 
                TextColor="#FFF"/>

    </Grid>

</ContentPage>