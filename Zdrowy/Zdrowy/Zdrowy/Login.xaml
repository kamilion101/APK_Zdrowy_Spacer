<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.FlyoutBehavior="Disabled"
             x:Class="Zdrowy.Login">

    <StackLayout
        
        Margin="20">

        
        <Label
            Text="Zdrowy Spacer"
            HorizontalOptions="Center"
            TextColor="Red"
            FontSize="35"
            Margin="0, 20" />

        <Entry
            Placeholder="E-mail"
            Keyboard="Email"
            x:Name="EmailInput" />

        <Entry
            Placeholder="Password"
            IsPassword="true"
            x:Name="PasswordInput" />

        <Button
            Text="Zaloguj się"
            Clicked="LoginClicked"
            Margin="60, 20"
            BackgroundColor="#4682B4"
            TextColor="White" />

        <Button
            Text="Stwórz nowe konto"
            TextColor="Red"
            HorizontalOptions="Center"
            BackgroundColor="Transparent"
            Clicked="SignUpClicked" />

        <Button
            Text="Bez logowania"
            Clicked="SkipClicked"
            Margin="60, 20"
            BackgroundColor="#4682B4"
            TextColor="White" />

    </StackLayout>
    
</ContentPage>